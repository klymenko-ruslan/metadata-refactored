?>

<?php if ($_item = $this->getItem()): ?>
<?php
        $isVisibleProduct = $_item->getProduct()->isVisibleInSiteVisibility();
        $productDetail = Mage::getModel('catalog/product');
        $productDetail->load($_item->getProduct()->getId());
?>
    <h5 class="title"><span id="order_item_<?php echo $_item->getId() ?>_title"><?php echo $this->htmlEscape($productDetail->getAttributeText('part_type')) ?></span></h5>

    <!-- TI Part Number -->
    <div><strong><?php echo $this->helper('sales')->__('TI Part #') ?>:</strong>
        <a target="_blank" rel="external" href="<?php echo Mage::helper('adminhtml')->getUrl('adminhtml/catalog_product/edit', array('id' => $productDetail->getId()))?>">
            <?php echo implode('<br />', Mage::helper('catalog')->splitSku($this->htmlEscape($productDetail->getPartNumber()))); ?>
        </a>
    </div>

    <!-- OEM Part Number -->
    <?php if ($_options = $this->getOrderOptions()): ?>
        <div><strong><?php echo $this->helper('sales')->__('OE Part #') ?>:</strong>
            <?php foreach ($_options as $_option) :
                $productByOem = Mage::getModel('catalog/product')->loadByAttribute('sku', $_option['value']);
                if ($_option['label'] === $productDetail->getOemSkuCustomOptionTitle()) { ?>
                    <a target="_blank" rel="external" href="<?php echo Mage::helper('adminhtml')->getUrl('adminhtml/catalog_product/edit', array('id' => $productByOem->getId()))?>">
                    <?php echo $this->htmlEscape($productByOem->getPartNumber());
                }
            endforeach; ?>
        </div>
    <?php endif; ?>

    <?php echo $this->htmlEscape($_item->getDescription()) ?>
<?php endif; ?>
