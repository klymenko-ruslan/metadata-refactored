<?php
$_product = $this->getProduct();
$_productManufacturer = $_product->getManufacturer();

// Get the Bill of Materials
$billMaterials = json_decode($_product->getBillOfMaterials(), true);

// Get the interchanges and TI part SKUs
$interchangeSkuArray = $_product->getInterchanges() ? explode(',', $_product->getInterchanges()) : null;
$tiPartSkuArray = $_product->getTiPartSku() ? explode(',', $_product->getTiPartSku()) : null;

// Load TI part based on TI part SKU
$_tiProductBySku = Mage::getModel('catalog/product');
$_tiProductBySku->load($_tiProductBySku->getIdBySku($tiPartSkuArray[0]));

// Load the compatible cartridge into the sku map
$compatibleCartridgeSkuProductMap = array();
foreach ($billMaterials as $compatibleCartridgeSku) {
    // Load compatible TI cartridge based on BoM cartridges
    $compatibleCartridgeProduct = Mage::getModel('catalog/product');
    $compatibleCartridgeProduct->load($compatibleCartridgeProduct->getIdBySku($compatibleCartridgeSku["ti_part_sku"][0]));
}
?>
<?php if ($_product->isSaleable()): ?>
    <div class="add-to-cart">
        <?php if (!$_product->isGrouped()): ?>
            <label for="qty"><?php echo $this->__('Qty:') ?></label>
            <input type="text" name="qty" id="qty" maxlength="12" value="<?php echo $this->getProductDefaultQty() * 1 ?>"
                   title="<?php echo $this->__('Qty') ?>" class="input-text qty"/>
        <?php endif; ?>
        <?php if ($_tiProductBySku->isSaleable() && $_productManufacturer != 44): ?>
            <button type="button" title="<?php echo $this->__('Add TI Part to Cart') ?>" class="button btn-cart"
                    onclick="setLocation('<?php echo $this->getAddToCartUrl($_tiProductBySku) ?>')">
                <span><span><?php echo $this->__('Add TI Part to Cart') ?></span></span>
            </button>
        <?php elseif ($compatibleCartridgeProduct->isSaleable() && $_productManufacturer != 44): ?>
            <!-- Adding compatible TI cartridge to cart button -->
            <button type="button" title="<?php echo $this->__('Add TI Cartridge to Cart') ?>" class="button btn-cart"
                    onclick="setLocation('<?php echo $this->getAddToCartUrl($compatibleCartridgeProduct) ?>')">
                <span><span><?php echo $this->__('Add TI Cartridge to Cart') ?></span></span>
            </button>
        <?php else: ?>
            <button type="button" title="<?php echo $this->__('Add to Cart') ?>" class="button btn-cart"
                    onclick="productAddToCartForm.submit(this)">
                <span><span><?php echo $this->__('Add to Cart') ?></span></span>
            </button>
        <?php endif; ?>
        <?php echo $this->getChildHtml('', true, true) ?>
    </div>
<?php endif; ?>
