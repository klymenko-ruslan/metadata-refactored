<?php /* @var $this Mage_Catalog_Block_Product_View_Abstract */ ?>
<?php
$_product = $this->getProduct();

// Get TI part SKUs and turbo types
$tiPartSkus = $_product->getTiPartSku() ? explode(",", $_product->getTiPartSku()) : null;
$turboTypes = $_product->getAttributeText('turbo_type');
?>

    <!-- Product Attributes -->
    <ul>
        <li><strong>Part Type:</strong> <?php echo $_product->getAttributeText('part_type'); ?></li>
        <li><strong>Manufacturer:</strong> <?php echo $_product->getAttributeText('manufacturer'); ?></li>
        <li><strong>Part Number:</strong> <?php echo $_product->getPartNumber(); ?></li>
        <?php if ($tiPartSkus): ?>
            <li><strong>Compatible TI Part<?php if (count($tiPartSkus) > 1) { // English pluralization
                        echo 's';
                    } ?>:</strong> <?php
                foreach ($tiPartSkus as $i => $tiPartSku) {
                    $tiProduct = Mage::getModel('catalog/product')->loadByAttribute('sku', $tiPartSku);
                    if ($tiProduct == null) {
                        
                        // Skip the product if it doesn't exist
                        continue;
                    }
                    
                    echo '<a href="' . $tiProduct->getProductUrl() . '">';
                    echo $tiProduct->getPartNumber();
                    echo '</a>';
                    
                    if ($i+1 < count($tiPartSkus)) {
                        echo ", ";
                    }
                } ?></li>
        <?php endif; ?>
        <?php if ($turboTypes): ?>
            <li><strong>Turbo Type<?php if (count($turboTypes) > 1) { // English pluralization
                        echo 's';
                    } ?>:</strong> <?php
                if (is_array($turboTypes)) {
                    $x = 1;
                    foreach ($turboTypes as $turboType) {
                        echo $turboType;
                        if ($x < count($turboTypes)) {
                            echo ", ";
                        }
                        $x++;
                    }
                } else {
                    echo $turboTypes;
                } ?></li>
        <?php endif; ?>
    </ul>

    <!-- Turbo cartridge upper section details -->
    <div style="margin-top:40px;">
        <?php if ($_product->getAttributeSetName() == 'Turbo'): ?>
            <ul>
                <?php $billOfMaterials = json_decode($_product->getBillOfMaterials(), true) ?>
                <?php
                foreach ($billOfMaterials as $bomItem) { // <-- need to setup handler to make sure bomItemProduct is a cartridge
                    $bomItemProduct = Mage::getModel('catalog/product')->loadByAttribute('sku', $bomItem['sku']);
                    ?>
                    <?php if ($bomItemProduct->getAttributeSetName() == 'Cartridge'): ?>
                        <li><strong>Cartridge:</strong> <?php
                            echo '<a href="' . $bomItemProduct->getProductUrl() . '">' . $bomItemProduct->getPartNumber() . '</a>'; ?>
                        </li>
                        <?php if ($bomItem['ti_part_sku']): ?>
                            <li>
                                <strong>Compatible TI Part:</strong>
                                <?php
                                foreach ($bomItem['ti_part_sku'] as $a => $bomTiProduct) {
                                    $bomItemInterchangeProduct = Mage::getModel('catalog/product')->loadByAttribute('sku', $bomTiProduct);
                                    if (!$bomItemInterchangeProduct) {
                                        continue;
                                    }
                                    
                                    echo '<a href="' . $bomItemInterchangeProduct->getProductUrl() . '">' . $bomItemInterchangeProduct->getPartNumber() . '</a>';
                                    
                                    if ($a+1 < count($bomItem['ti_part_sku'])) {
                                        echo ", ";
                                    }
                                }
                                ?>
                            </li>
                        <?php endif; ?>
                    <?php endif; ?>
                <?php
                }
                ?>
            </ul>
        <?php endif; ?>
    </div>

<?php echo $this->getChildHtml('product_type_data_extra') ?>