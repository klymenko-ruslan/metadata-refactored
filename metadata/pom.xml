    </parent>
    <scm>
        <connection>scm:git:ssh://git@github.com:pthiry/TurboInternational.git</connection>
        <developerConnection>scm:git:ssh://git@github.com:pthiry/TurboInternational.git</developerConnection>
        <url>http://github.com:pthiry/TurboInternational/tree/master</url>
